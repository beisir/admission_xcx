/* pages/class/class.wxss */
.classLeft{width:180rpx;left:0;top:0; background: #f5f5f5;overflow-y: scroll; position: fixed; bottom:0;}
.classLeft text{ height:90rpx;line-height:90rpx; color:#333; font-size: 28rpx; text-align: center; display: block;}
.classLeft::-webkit-scrollbar,.classRig::-webkit-scrollbar {display:none;}
text.classCur{ background: #fff; color: #fd5555; margin: -1rpx 0 0; border-bottom: none;border-left: 5rpx solid #fd5555;}
.classRig{position:fixed;top:0;right:20rpx;left:200rpx;bottom:0;overflow-y:scroll;}
.classRigCon{ overflow: hidden;}
.classRigTitCon{ height: 82rpx; line-height: 82rpx;}
.classRigTit{float: left; color: #333; line-height: 82rpx; font-size:26rpx;font-weight:bold;width: 100%;}
.classRigMore{float: right; color: #999; line-height: 82rpx; font-size: 24rpx; display: block; text-align: right; width:120rpx; padding-right: 30rpx;background:url(https://style.org.hc360.com/images/cpk/cpkIndexIco.png) 66px -388rpx no-repeat; background-size: 300rpx 600rpx;}
.classRigBot{background: #fff; padding:20rpx 30rpx; overflow: hidden; border-bottom: 1rpx solid #e5e5e5;}
.cLink{ float: left; width: 33.333%; font-size: 24rpx; color: #666; text-align: center; padding: 10rpx 0 15rpx;}
.cLink image{width:120rpx;height:120rpx; margin: 0 auto;}
.cLink text{display: block; line-height: 40rpx;
text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;}





.classLeft text {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}